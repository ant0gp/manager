<%= form_for @subscription, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :card_no, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :card_no, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ends_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :ends_at, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :starts_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :starts_at, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  subscriptions_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
